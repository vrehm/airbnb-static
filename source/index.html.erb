---
title: Vincent's Airbnb static page
---

<!-- Your banner code -->
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://unsplash.it/g/1280/720');">

  <%= partial "login-modal" %>

  <div class="banner-content">
    <h1>Some Stuff</h1>
    <p>Very cool stuff, useful and smart</p>

    <form class="form-inline">
      <div class="form-group">
        <label class="sr-only" for="exampleInputEmail3"></label>
        <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Where ?">
      </div>
      <div class="form-group">
        <label class="sr-only" for="exampleInputEmail3">Check-in</label>
        <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Check-in">
      </div>
      <div class="form-group">
        <label class="sr-only" for="exampleInputPassword3">Check-out</label>
        <input type="text" class="form-control" id="exampleInputPassword3" placeholder="Check-out">
      </div>
      <select class="form-control">
        <option value="1">1 guest</option>
        <option value="2">2 guests</option>
        <option value="3">3 guests</option>
      </select>
      <button type="submit" class="btn btn-danger">Search</button>
    </form>
  </div>

</div>

<div class="container text-center padded features">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-3">
      <%= image_tag "globe.png" %>
      <h2>Discover the world</h2>
      <p>The earth is your new home.</p>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <%= image_tag "dollar.png" %>
      <h2>Pay online</h2>
      <p>No cash issues anymore.</p>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <%= image_tag "beer.png" %>
      <h2>Meet people</h2>
      <p>Discover new culture and lifestyle.</p>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <%= image_tag "heart.png" %>
      <h2>Share and love</h2>
      <p>Join a community you will love.</p>
    </div>
  </div>
</div>

<div class="wrapper-grey padded">
  <div class="container">
    <h2 class="text-center">Your next trip</h2>
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path ("card-paris.jpg") %>');">
          <div class="card-category">Paris</div>
          <div class="card-description">
            <h2>Seb's home</h2>
            <p>Charming room with patio</p>
          </div>
          <%= image_tag "seb.jpg", class: "card-user avatar avatar-large" %>
          <%= link_to "", "team.html", class: "card-link" %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path ("card-brussels.jpg") %>');">
          <div class="card-category">Brussels</div>
          <div class="card-description">
            <h2>Anne's home</h2>
            <p>Lovely house</p>
          </div>
          <%= image_tag "anne.jpg", class: "card-user avatar avatar-large" %>
          <%= link_to "", "team.html", class: "card-link" %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path ("card-london.jpg") %>');">
          <div class="card-category">London</div>
          <div class="card-description">
            <h2>Romain's home</h2>
            <p>Nice flat in Piccadilly</p>
          </div>
          <%= image_tag "romain.jpg", class: "card-user avatar avatar-large" %>
          <%= link_to "", "team.html", class: "card-link" %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Your newsletter code -->
<%= partial "newsletter" %>

<!-- Your map code -->
<%= partial "map" %>
